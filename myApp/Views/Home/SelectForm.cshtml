<div class="container">
    <div class="row">
        <div class="col-3">
            <a href="@Url.Action("Info", "Home",new { user = ViewBag.User, year = ViewBag.Year})" class="btn btn-lg active-link-info">
                <i class="fa fa-info gradient-text-edit" aria-hidden="true"></i> <strong class="gradient-text-edit">ข้อมูล</strong>
            </a>
        </div>
        <div class="col-6 text-center topic-title">
            <h1>เลือกแบบประเมิน</h1>
        </div>
        <div class="col-3 text-end">
            <a href="#" id="toggle-btn" class="btn btn-lg action-view"><i class="fa-solid fa-list-ul"></i></a>
        </div>
    </div>
</div>


    <div class="px-4" id="custom-cards">

        @if (Model.Count() == 0)
        {
            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" id="alertBox">
                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>ไม่มี <strong>IDP Group</strong> ที่ลงทะเบียนไว้
            </div>
        }
        <div id="list-view">
            <div class="container">
                <table class="table" id="myTable">
                    <thead style="background-color: #2D4686; color: #C8E8FF">
                        <tr>
                            <th width="10%" class="text-center">K2 No.</th>
                            <th width="5%" class="text-center">IDPGroupId</th>
                            <th width="15%" class="text-center">IDPGroupName</th>
                            <th width="5%" class="text-center">Year</th>
                            <th width="10%" class="text-center">Current Approver</th>
                            <th width="5%" class="text-center">Status</th>
                            <th width="5%" class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td class="text-center">@emp.Result.K2_No</td>
                                <td class="text-center">@emp.IDPGroupId</td>
                                <td>@emp.IDPGroup.IDPGroupName</td>
                                <td class="text-center">@emp.Result.Year</td>
                                <td class="text-center">@emp.Result.CurrentApprover</td>
                                <td class="text-center">
                                    @if (emp.Status == "Draft")
                                    {
                                        <p style="color: #802FDE; background-color: #E8E2F7; padding: 3px; border-radius: 3rem; width: auto; " class="text-center fw-bold">@emp.Status</p>
                                    }
                                    else if (emp.Status == "Self")
                                    {
                                        <p style="color: #E50087; background-color: #FFE5F4; padding: 3px; border-radius: 3rem; width: auto; " class="text-center fw-bold">@emp.Status</p>
                                    }
                                    else if (emp.Status == "1st Evaluating")
                                    {
                                        <p style="color: #DAAB00; background-color: #FDF3CE; padding: 3px; border-radius: 3rem; width: auto; " class="text-center fw-bold">@emp.Status</p>
                                    }
                                    else if (emp.Status == "Developing")
                                    {
                                        <p style="color: #00AEE5; background-color: #D8F6FF; padding: 3px; border-radius: 3rem; width: auto; " class="text-center fw-bold">@emp.Status</p>
                                    }
                                    else if (emp.Status == "2nd Evaluating")
                                    {
                                        <p style="color: #DAAB00; background-color: #FDF3CE; padding: 3px; border-radius: 3rem; width: auto; " class="text-center fw-bold">@emp.Status</p>
                                    }
                                    else if (emp.Status == "Success")
                                    {
                                        <p style="color: #14B789; background-color: #D5F8EF; padding: 3px; border-radius: 3rem; width: auto; " class="text-center fw-bold">@emp.Status</p>
                                    }
                                </td>
                                <td class="text-center">
                                    <a id="link" href="@Url.Action("Form", "Home", new { user = ViewBag.User, idpGroupId = emp.IDPGroupId, guid = emp.Result.GUID})" class="btn active-link-form" title="ทำแบบประเมิน">
                                        <i class="fa fa-file-text gradient-icon-form fa-beat fs-5" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="@Url.Action("Employee")" class="btn btn-lg active-link-back">
                    <i class="fa fa-arrow-left gradient-icon-back" aria-hidden="true"></i> <strong class="gradient-icon-back">กลับ</strong>
                </a>
            </div>
        </div>

        <div id="card-view" style="display: none;">
            <div class="container">
                <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">

                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var enroll = Model.ElementAt(i);
                        string url = Url.Action("Form", new { id = ViewBag.Id, idpGroupId = enroll.IDPGroupId, year = ViewBag.Year });
                        string backgroundColor = "";
                        string color = "";
                        if(enroll.Status == "Draft")
                        {
                            backgroundColor = "#802FDE";
                            color = "#E8E2F7";
                        }
                        else if(enroll.Status == "Evaluating")
                        {
                            backgroundColor = "#E50087";
                            color = "#FFE5F4";
                        }
                        else if (enroll.Status == "Checking")
                        {
                            backgroundColor = "#DAAB00";
                            color = "#FDF3CE";
                        }
                        else if (enroll.Status == "Waiting")
                        {
                            backgroundColor = "#DAAB00";
                            color = "#D8F6FF";
                        }
                        else if (enroll.Status == "Success")
                        {
                            backgroundColor = "#14B789";
                            color = "#D5F8EF";
                        }
                        else if (enroll.Status == "Decline")
                        {
                            backgroundColor = "#C52F2F";
                            color = "#FFC9C9";
                        }
                        <div class="col">
                            <a href="@url" class="border-0">
                                <div class="card card-cover h-100 overflow-hidden rounded-4 border-0" >
                                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white border-0" style="background-color: @backgroundColor">
                                        <h1 class="lh-1 fw-bold" style="color: @color">@enroll.IDPGroupId</h1>
                                        <h3 class="lh-1 fw-bold" style="color: @color">@enroll.IDPGroup.IDPGroupName</h3>
                                        <ul class="d-flex list-unstyled mt-5">
                                            <li class="me-auto">
                                                @if (enroll.Status == "Evaluating")
                                                {
                                                    <i class="fa-solid fa-pen-to-square fa-beat" aria-hidden="true" style="font-size: xx-large; color: @color; "></i>
                                                }
                                                else if (enroll.Status == "Checking")
                                                {
                                                    <i class="fa fa-spinner fa-spin" aria-hidden="true" style="font-size: xx-large; color: @color;"></i>
                                                }
                                                else if (enroll.Status == "Waiting")
                                                {
                                                    <i class="fa fa-spinner fa-spin" aria-hidden="true" style="font-size: xx-large; color: #9B0008;"></i>
                                                }
                                                else if (enroll.Status == "Success")
                                                {
                                                    <i class="fa fa-checke" aria-hidden="true" style="font-size: xx-large; color: #006f57;"></i>
                                                }
                                                else if (enroll.Status == "Decline")
                                                {
                                                    <i class="fa fa-checke" aria-hidden="true" style="font-size: xx-large; color: #006f57;"></i>
                                                }
                                            </li>
                                            <li class="d-flex align-items-center">
                                                <h4 style="color: @color"><i class="fa fa-layer-group"></i> @enroll.Competencies</h4>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                </div>
                <a href="@Url.Action("Employee")" class="btn btn-lg active-link-back">
                    <i class="fa fa-arrow-left gradient-icon-back" aria-hidden="true"></i> <strong class="gradient-icon-back">กลับ</strong>
                </a>
            </div>
            
        </div>


    </div>
    <script>
        function toggleView() {
            var listView = document.getElementById('list-view');
            var cardView = document.getElementById('card-view');
            var toggleBtn = document.getElementById('toggle-btn');

            if (listView.style.display === 'none') {
                listView.style.display = 'block';
                cardView.style.display = 'none';
                toggleBtn.innerHTML = '<i class="fa-solid fa-list-ul"></i>'; // เปลี่ยน icon เป็น list view
            } else {
                listView.style.display = 'none';
                cardView.style.display = 'block';
                toggleBtn.innerHTML = '<i class="fa-solid fa-grip"></i>'; // เปลี่ยนกลับเป็นตัวอักษร "สลับการแสดงผล"
            }
        }

        var toggleBtn = document.getElementById('toggle-btn');
        toggleBtn.addEventListener('click', toggleView);
    </script>


