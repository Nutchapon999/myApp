<script src="https://unpkg.com/exceljs/dist/exceljs.min.js"></script>
<script type="text/javascript">
    function exportTableToExcel(tableId) {
        // Get the table element
        var table = document.getElementById(tableId);

        // Create a new Workbook object
        var workbook = new ExcelJS.Workbook();

        // Add a new worksheet to the workbook
        var worksheet = workbook.addWorksheet('Sheet 1');

        // Iterate over the table rows
        for (var i = 0; i < table.rows.length; i++) {
            var row = table.rows[i];
            var rowData = [];

            // Iterate over the table cells in the current row
            for (var j = 0; j < row.cells.length; j++) {
                var cell = row.cells[j];
                rowData.push(cell.innerText);
            }

            // Add the row data to the worksheet
            worksheet.addRow(rowData);
        }

        // Create a new Blob object with the workbook data
        workbook.xlsx.writeBuffer().then(function (buffer) {
            var blob = new Blob([buffer], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });

            // Create a download link and click it to trigger the download
            var link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'table_data.xlsx';
            link.click();
        });
    }
</script>
<script type="text/javascript">
    function printTable(tableId) {
        var printContents = document.getElementById(tableId).outerHTML;
        var originalContents = document.body.innerHTML;

        var printWindow = window.open('', '_blank');
        var printDocument = printWindow.document;

        printDocument.write('<!DOCTYPE html>');
        printDocument.write('<html>');
        printDocument.write('<head>');
        printDocument.write('<meta charset="utf-8">');
        printDocument.write('<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">');
        printDocument.write('<title>Print</title>');
        printDocument.write('<meta name="filename" content="print_file.html">'); // Set the filename here
        printDocument.write('<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">');
        printDocument.write('</head>');
        printDocument.write('<body>');
        printDocument.write('<div class="container">');
        printDocument.write('<img height="100" src="https://www.satpcl.co.th/themes/default/assets/static/images/logo.png" />'); // Replace "images/logo.png" with the relative path to your image
        printDocument.write('<h3 class="mt-4"><strong>รายละเอียด</strong></h3>');
        printDocument.write('<h5>รหัส IDP Group: <code>@ViewBag.IDPGroupId</code></h5>');
        printDocument.write('<h5></i> ชื่อ IDP Group: <code>@ViewBag.IDPGroupName</code></h5>');
        printDocument.write('<h5>ปี: <code>@ViewBag.Year</code></h5>');
        printDocument.write('<h5>จำนวนคน: <code>@ViewBag.Member</code> | จำนวน Competency: <code>@ViewBag.Competency</code></h5>');
        printDocument.write('<h5>วันที่พิมพ์: <code>' + new Date().toLocaleDateString() + '</code></h5>');
        printDocument.write('<table class="table">');
        printDocument.write(printContents);
        printDocument.write('</table>');
        printDocument.write('</div>');
        printDocument.write('</body>');
        printDocument.write('</html>');
        printDocument.close();

        setTimeout(function() {
            printWindow.print();
            printWindow.close();
            document.body.innerHTML = originalContents;
        }, 500);
    }
        
</script>

