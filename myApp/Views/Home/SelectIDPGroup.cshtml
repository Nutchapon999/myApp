@model IEnumerable<myApp.Models.IDPGroup>
@{
    ViewBag.Title = "SelectIDPGroup";
}

<main>
    @using (Html.BeginForm("SelectedIDPGroup", "Home", new { userId = ViewBag.Id }, FormMethod.Post))
    {
        <div class="card shadow border-0 m-3">
            <div class="card-header text-center border-0 py-3" style="background-color: #fff3cd;">
                <i class="fa fa-book text-warning" style="font-size: 60px;"></i>
                <h1><strong>IDP Group</strong></h1>
            </div>
            <div class="card-body">
                <table class="table table-hover table-responsive" id="myTable">
                    <thead class="table-primary">
                        <tr>
                            <th width="15%"></th>
                            <th width="10%">รหัส IDP Group</th>
                            <th width="55%">ชื่อ IDP Group</th>
                            <th width="10%">จำนวนคน</th>
                            <th width="10%">ปี</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var idp in Model)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="iDPGroupIds" value="@idp.IDPGroupId" />
                                    </div>
                                </td>
                                <td>@idp.IDPGroupId</td>
                                <td>@idp.IDPGroupName</td>
                                <td>@idp.EmployeeEnrollmentCount</td>
                                <td>@idp.Year</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary">ยืนยัน</button>
                <a href="@Url.Action("AddIDPGroup", new { id = ViewBag.Id })" class="btn btn-danger">ยกเลิก</a>
            </div>
        </div>
    }
</main>

