                                                            <input class="form-check-input" type="radio" name="modalRadio1[@idpItm.IDPGroupItemId]" id="modalRadioButton1-@idpItm.IDPGroupItemId" value="1" @(idpItm.Pl == "1" ? "checked" : "") />
