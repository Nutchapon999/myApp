                                                            <input class="form-check-input" type="radio" name="modalRadio1[@idpItm.IDPGroupItemId]" id="modalRadioButton3-@idpItm.IDPGroupItemId" value="3" @(idpItm.Pl == "3" ? "checked" : "") />
