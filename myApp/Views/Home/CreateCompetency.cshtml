
@model myApp.Models.Competency
@{
    ViewBag.Title = "CreateCompetency";
}

<main class="container">
    <div>
        @using (Html.BeginForm("CreateCompetency", "Home", FormMethod.Post))
        {
            <div class="py-2 text-center bg- p-2 rounded" style="background-color: #eeeeee60">
                <i class="fa fa-stack-overflow text-danger" style="font-size:60px;"></i>
                <h1><strong>เพิ่ม Competency</strong></h1>
                <div class="alert alert-info alert-dismissible fade show text-center mt-3" role="alert">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    <strong>ข้อควรระวัง:</strong> รหัส Competency นั้นหากสร้างแล้วไม่อาจแก้ไขได้ โปรดตรวจสอบให้แน่ใจก่อนทำการ <strong>"บันทึก"</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" id="alertBox">
                        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>@ViewBag.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <script>
                        window.setTimeout(function () {
                            $("#alertBox").fadeTo(300, 0).slideUp(300, function () {
                                $(this).remove();
                            });
                        }, 3000);
                    </script>
                }
            </div>
            <div class="container card-body shadow-sm p-3 rounded-3 mt-3">
                <div class="row g-5">
                    <div class="col-md-5 col-lg-5">
                        <div class="row">
                            <div class="col-md-7">
                                <label for="createCompetencyId" class="form-label form-label-id p-1" style="font-size: 15px">รหัส Competency</label>
                                <input type="text" class="form-control" id="createCompetencyId" name="CompetencyId">
                            </div>
                            <div class="col-md-5">
                                <label for="createType" class="form-label form-label-id p-1">ชนิด</label>
                                <select class="form-select" id="createType" name="Type">
                                    <option value="CC">CC</option>
                                    <option value="FC">FC</option>
                                    <option value="MC">MC</option>
                                    <option value="TC">TC</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <label for="createCompetencyNameTH" class="form-label form-label-detail p-1" >ชื่อภาษาไทย</label>
                            <input type="text" class="form-control" id="createCompetencyNameTH" name="CompetencyNameTH" style="min-width: 100%;">
                        </div>
                        <div class="col">
                            <label for="createCompetencyNameEN" class="form-label form-label-detail p-1">ชื่อภาษาอังกฤษ</label>
                            <input type="text" class="form-control" id="createCompetencyNameEN" name="CompetencyNameEN" style="min-width: 100%;">
                        </div>
                        <div class="col">
                            <label for="createCompentencyDesc" class="form-label form-label-detail p-1">Definition</label>
                            <textarea class="form-control" id="createCompentencyDesc" name="CompetencyDesc" style="min-width: 100%; height:7px"></textarea>
                        </div>
                        <hr />
                        <div class="mt-3 list-group">
                            <div class="input-group-text form-label-id">
                                <div>มีการใช้ Competency นี้หรือไม่?</div>
                            </div>
                            <div class="input-group mt-2">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0" type="radio" value="true" name="Active" aria-label="Radio button for following text input" checked>
                                </div>
                                <div class="form-control">ใช้</div>
                            </div>
                            <div class="input-group mt-2">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0" type="radio" value="false" name="Active" aria-label="Radio button for following text input">
                                </div>
                                <div class="form-control">ไม่ใช้</div>
                            </div>
                            @Html.ValidationMessageFor(model => model.Active)
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-7">
                        <div>
                            <label for="createPl1" class="form-label form-label-pl p-1">PL1</label>
                            <textarea class="form-control" id="createPl1" name="Pl1" style="min-width: 100%; height:7px"></textarea>
                        </div>
                        <div>
                            <label for="createPl2" class="form-label form-label-pl p-1">PL2</label>
                            <textarea class="form-control" id="createPl2" name="Pl2" style="min-width: 100%; height:7px"></textarea>
                        </div>
                        <div>
                            <label for="createPl3" class="form-label form-label-pl p-1">PL3</label>
                            <textarea class="form-control" id="createPl3" name="Pl3" style="min-width: 100%; height:7px"></textarea>
                        </div>
                        <div>
                            <label for="createPl4" class="form-label form-label-pl p-1">PL4</label>
                            <textarea class="form-control" id="createPl4" name="Pl4" style="min-width: 100%; height:7px"></textarea>
                        </div>
                        <div>
                            <label for="createPl5" class="form-label form-label-pl p-1">PL5</label>
                            <textarea class="form-control" id="createPl5" name="Pl5" style="min-width: 100%; height:7px"></textarea>
                        </div>
                        <div class="row text-center mt-3">
                            <div class="col-md mt-2">
                                <button type="submit" class="btn active-link-submit shadow-sm" style="background-color: #cfe2ff">
                                    <i class="fa fa-floppy-o" style="color: #4083be" aria-hidden="true"></i> <strong style="color: #4083be">บันทึก</strong>
                                </button>
                            </div>
                            <div class="col-md mt-2">
                                <a href="@Url.Action("UploadCompetency")" style="background-color: #d4edda" class="btn active-link-upload shadow-sm">
                                    <i class="fa fa-upload" style="color: #198754" aria-hidden="true"></i> <strong style="color: #198754">อัปโหลด</strong>
                                </a>
                            </div>
                            <div class="col-md mt-2">
                                <a href="@Url.Action("Index")" class="btn active-link-back shadow-sm" style="background-color: #f8d7da">
                                    <i class="fa fa-ban" style="color: #dc3545" aria-hidden="true"></i> <strong style="color: #dc3545">ยกเลิก</strong>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        }
    </div>
</main>
<style>
    .form-label-id {
        background-color: #f8d7da;
        border: 2px solid #dc3545;
        color: #dc3545;
        font-weight: bold;
        border-radius: 6px;
        margin-top: 10px;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    .form-label-pl {
        background-color: #fff3cd;
        border: 2px solid #ffc107;
        color: #ffc107;
        font-weight: bold;
        border-radius: 6px;
        margin-top: 10px;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    .form-label-detail {
        background-color: #cff4fc;
        border: 2px solid #0dcaf0;
        color: #0dcaf0;
        font-weight: bold;
        border-radius: 6px;
        margin-top: 10px;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    .active-link-submit:hover{
        transform: scale(1.1);
        border: 3px solid #4083be;
    }
    .active-link-submit:active {
        transform: scale(0.95);
    }
    .active-link-upload:hover {
        transform: scale(1.1);
        border: 3px solid #198754;
    }

    .active-link-upload:active {
        transform: scale(0.95);
    }
    .active-link-back:hover {
        transform: scale(1.1);
        border: 3px solid #dc3545;
    }

    .active-link-back:active {
        transform: scale(0.95);
    }
</style>

