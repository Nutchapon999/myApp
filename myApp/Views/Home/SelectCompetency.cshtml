@model IEnumerable<myApp.Models.Competency>
@{
    ViewBag.Title = "SelectCompetency";
}

<main class="mb-3" style="margin-top: 50px">
    @using (Html.BeginForm("SelectedCompetency", "Home", new { competencyFormId = ViewBag.CompetencyFormId }, FormMethod.Post))
    {
        <div class="card shadow">
            <div class="card-header bg-primary">
                <h2 class="text-center" style="color:white"><i class="fa fa-list-alt" aria-hidden="true"></i> <strong>Competency</strong></h2>
            </div>
            <div class="card-body">
                <table class="table table-hover table-responsive" id="myTable">
                    <thead class="table-primary">
                        <tr>
                            <th width="40"></th>
                            <th width="50">ชนิด</th>
                            <th width="50">รหัส</th>
                            <th width="150">ชื่อภาษาไทย</th>
                            <th width="150">ชื่อภาษาอังกฤษ</th>
                            <th width="230">Definition</th>
                            <th width="200">pl1</th>
                            <th width="200">pl2</th>
                            <th width="200">pl3</th>
                            <th width="200">pl4</th>
                            <th width="200">pl5</th>
                            <th width="50">เลือก PL</th>
                            <th width="50">ความสำคัญ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cmpty in Model)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="competencyIds" value="@cmpty.CompetencyId" />
                                    </div>
                                </td>

                                <td>@cmpty.Type</td>
                                <td>@cmpty.CompetencyId</td>
                                <td>@cmpty.CompetencyNameTH</td>
                                <td>@cmpty.CompetencyNameEN</td>
                                <td style="font-size: 14px">@cmpty.CompetencyDesc</td>
                                <td style="font-size: 14px">@cmpty.Pl1</td>
                                <td style="font-size: 14px">@cmpty.Pl2</td>
                                <td style="font-size: 14px">@cmpty.Pl3</td>
                                <td style="font-size: 14px">@cmpty.Pl4</td>
                                <td style="font-size: 14px">@cmpty.Pl5</td>
                                <td>
                                    <select class="form-select" name="plValues[@cmpty.CompetencyId]">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select" name="priorityValues[@cmpty.CompetencyId]">
                                        <option value=""></option>
                                        <option value="A">A</option>
                                        <option value="B">B</option>
                                        <option value="C">C</option>
                                    </select>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary">ยืนยัน</button>
                <a href="@Url.Action("AddCompetency", new { id = ViewBag.CompetencyFormId })" class="btn btn-danger">ยกเลิก</a>
            </div>
        </div>
    }
</main>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script src="https://cdn.datatables.net/fixedcolumns/4.2.2/js/dataTables.fixedColumns.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#myTable').DataTable({
            language: {
                search: "ค้นหา:", // Change the search label here
            },
            scrollY: 500,
            
        });
    });
</script>
<style>
    .form-check-input[type="checkbox"] {
        width: 25px;
        height: 25px;
    }
</style>