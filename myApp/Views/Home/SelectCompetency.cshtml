@model IEnumerable<myApp.Models.Competency>
@{
    ViewBag.Title = "SelectCompetency";
}

<main>
    @using (Html.BeginForm("SelectedCompetency", "Home", new { idpGroupId = ViewBag.IDPGroupId }, FormMethod.Post))
    {
        <div class="card shadow border-0 m-3">
            <div class="card-header text-center border-0 py-3" style="background-color: #fff3cd;">
                <i class="fa fa-list-alt text-warning" style="font-size: 60px;"></i>
                <h1><strong>เลือก Competency</strong></h1>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-auto me-auto">
                        <button type="submit" class="btn btn-primary btn-lg" style="width: auto; border-radius: 2rem"> <strong>ยืนยัน</strong></button>
                    </div>
                    <div class="col-auto">
                        <a href="@Url.Action("AddCompetency", new { id = ViewBag.IDPGroupId })" class="btn btn-danger btn-lg" style="width: auto; border-radius: 2rem"> <strong>ยกเลิก</strong></a>
                    </div>
                </div>
                <table class="table table-hover table-responsive" id="myTable">
                    <thead class="table-primary">
                        <tr>
                            <th width="5%"></th>
                            <th width="5%">เลือก PL</th>
                            <th width="5%">ชนิด</th>
                            <th width="5%">รหัส</th>
                            <th width="10%">ชื่อภาษาไทย</th>
                            <th width="10%">ชื่อภาษาอังกฤษ</th>
                            <th width="10%">Definition</th>
                            <th width="10%">pl1</th>
                            <th width="10%">pl2</th>
                            <th width="10%">pl3</th>
                            <th width="10%">pl4</th>
                            <th width="10%">pl5</th>

                            <!--<th width="50">ความสำคัญ</th>-->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cmpty in Model)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="competencyIds" value="@cmpty.CompetencyId" />
                                    </div>
                                </td>
                                <td>
                                    <select class="form-select" name="plValues[@cmpty.CompetencyId]">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                </td>
                                <th scope="row">@cmpty.Type</th>
                                <th scope="row">@cmpty.CompetencyId</th>
                                <td style="font-size: 14px">@cmpty.CompetencyNameTH</td>
                                <td style="font-size: 14px">@cmpty.CompetencyNameEN</td>
                                <td style="font-size: 14px">@cmpty.CompetencyDesc</td>
                                <td style="font-size: 14px">@cmpty.Pl1</td>
                                <td style="font-size: 14px">@cmpty.Pl2</td>
                                <td style="font-size: 14px">@cmpty.Pl3</td>
                                <td style="font-size: 14px">@cmpty.Pl4</td>
                                <td style="font-size: 14px">@cmpty.Pl5</td>

                                <!--<td>
                        <select class="form-select" name="priorityValues[@cmpty.CompetencyId]">
                            <option value=""></option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                        </select>
                    </td>-->
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row mt-2">
                    <div class="col-auto me-auto">
                        <button type="submit" class="btn btn-primary btn-lg" style="width: auto; border-radius: 2rem"> <strong>ยืนยัน</strong></button>
                    </div>
                    <div class="col-auto">
                        <a href="@Url.Action("AddCompetency", new { id = ViewBag.IDPGroupId })" class="btn btn-danger btn-lg" style="width: auto; border-radius: 2rem"> <strong>ยกเลิก</strong></a>
                    </div>
                </div>

            </div>
        </div>
    }
</main>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script src="https://cdn.datatables.net/fixedcolumns/4.2.2/js/dataTables.fixedColumns.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#myTable').DataTable({
            language: {
                search: "ค้นหา:", // Change the search label here
            },
            scrollY: 800,
            
        });
    });
</script>
<style>
    .form-check-input[type="checkbox"] {
        width: 25px;
        height: 25px;
    }
</style>