            <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary">
                <li class="breadcrumb-item">
                    <a class="link-body-emphasis text-decoration-none" href="@Url.Action("IDPGroup")">
                        <i class="fa fa-book" style="color: #C8E8FF"></i> <strong style="color: #C8E8FF">IDP Group</strong>
                        <span class="visually-hidden">Home</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a class="link-body-emphasis text-decoration-none" style="color: #C8E8FF" href="@Url.Action("AddCompetency", new { idpGroupId = ViewBag.IDPGroupId })"><strong>แก้ไข Competency (@ViewBag.IDPGroupId)</strong></a>
                </li>
                <li class="breadcrumb-item">
                    <a class="link-body-emphasis text-decoration-none" style="color: #C8E8FF" href="@Url.Action("SelectCompetency", new { idpGroupId = ViewBag.IDPGroupId })"><strong>เพิ่ม Competency (@ViewBag.IDPGroupId)</strong></a>
                </li>
            </ol>
        </nav>
    </div>

    <div class="text-center sticky-header">
        <div class="background-container">
            <i class="fa fa-layer-group topic-icon"></i>
        </div>
    </div>

</div>
<main>
    @using (Html.BeginForm("SelectedCompetency", "Home", new { idpGroupId = ViewBag.IDPGroupId }, FormMethod.Post))
    {
        <div class="card border-0 m-3">
            <div class="card-body border-0 mt-4">
                <div class="row">
                    <div class="col-3  d-flex align-items-center ">
                        <label for="selectType" class="form-label me-2 mt-2">ชนิด:</label>
                        <select class="form-select" id="selectType" style="width: 100px;">
                            <option value="">ทั้งหมด</option>
                            <option value="CC">CC</option>
                            <option value="FC">FC</option>
                            <option value="MC">MC</option>
                            <option value="TC">TC</option>
                        </select>
                    </div>
                    <div class="col-6 text-center topic-title">
                        <h2 class="mt-2 ">เพิ่ม Competency</h2>
                    </div>
                    <div class="col-3 text-end">

                    </div>
                </div>
                <div class="row justify-content-center mb-2">
                    <div class="col-4">
                        <a href="@Url.Action("AddCompetency", new { idpGroupId = ViewBag.IDPGroupId })" class="btn btn-lg active-link-back shadow-sm">
                            <i class="fa fa-arrow-left gradient-icon-back" aria-hidden="true"></i> <strong class="gradient-icon-back"> กลับ</strong>
                        </a>
                        <button type="submit" class="btn btn-lg active-link-submit shadow-sm">
                            <i class="fa fa-save gradient-icon-submit" aria-hidden="true"></i> <strong class="gradient-icon-submit"> บันทึก</strong>
                        </button>
                    </div>
                    <div class="col-4 text-center">
                        <h5 class="me-3">
                            <span class="icon-item"><i class="fa fa-key fs-4" title="รหัส IDP Group"></i></span> รหัส<strong>: @ViewBag.IDPGroupId</strong>

                            <span class="icon-item"><i class="fa fa-book fa-book-bg fs-4" title="ชื่อ IDP Group"></i></span> ชื่อ<strong>: @ViewBag.IDPGroupName</strong>

                            <span class="icon-item"><i class="fa fa-regular fa-calendar-days fs-4" title="ปี"></i></span> ปี<strong>: @ViewBag.Year</strong>
                        </h5>
                    </div>

                    <div class="col-4 text-end">

                    </div>
                </div>
                <table class="table table-hover table-responsive" id="myTable">
                    <thead style="background-color: #2D4686; color: #C8E8FF;">
                        <tr>
                            <th width="5%">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="checkAll" />
                                    <label class="form-check-label" for="checkAll">
                                    </label>
                                </div>
                            </th>
                            <th width="5%">ชนิด</th>
                            <th width="5%">รหัส</th>
                            <th width="10%">ชื่อภาษาไทย</th>
                            <th width="10%">ชื่อภาษาอังกฤษ</th>
                            <th width="10%">Definition</th>
                            <th width="10%">pl1</th>
                            <th width="10%">pl2</th>
                            <th width="10%">pl3</th>
                            <th width="10%">pl4</th>
                            <th width="10%">pl5</th>
                        </tr>
                    </thead>
                    <tbody id="tableContainer">
                        
                    </tbody>
                </table>
                <div class="row mt-3">
                    <div class="col-auto me-auto">
                        <a href="@Url.Action("AddCompetency", new { id = ViewBag.IDPGroupId })" class="btn btn-lg active-link-back shadow-sm">
                            <i class="fa fa-arrow-left gradient-icon-back" aria-hidden="true"></i> <strong class="gradient-icon-back"> กลับ</strong>
                        </a>
                        <button type="submit" class="btn btn-lg active-link-submit shadow-sm">
                            <i class="fa fa-save gradient-icon-submit" aria-hidden="true"></i> <strong class="gradient-icon-submit"> บันทึก</strong>
                        </button>
                    </div>
                    <div class="col-auto">

                    </div>
                </div>
            </div>
        </div>
    }
</main>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<link rel="stylesheet" href="~/Content/DataTables/css/jquery.dataTables.css" />
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#myTable').DataTable({
            info: false,
            order: [[1, 'asc']],
            paging: true,
            language: {
                search: '',
                searchPlaceholder: 'ค้นหา',
                lengthMenu: '_MENU_',
                paginate: {
                    next: 'ถัดไป <i class="fa fa-angle-right"></i>',
                    previous: '<i class="fa fa-angle-left"></i> ก่อนหน้า'
                },
                info: 'กำลังแสดง _START_ ถึง _END_ จาก _TOTAL_'
            },
            fixedHeader: {
                header: true,
                footer: true
            },
            columnDefs: [{
                targets: 0,
                orderable: false
            }],

            initComplete: function () {
                js('#myTable_length label').addClass('entries-label');
            }
        });
    });

    js(document).ready(function () {

        var send = '@Url.Action("GetSelectCompetency", "Home")';

        $("#selectType").change(function () {
            var selectedValue = $(this).val();
            var idpGroupId = '@ViewBag.IDPGroupId';
            console.log(selectedValue);
            $.ajax({
                url: send,
                type: "POST",
                data: { selectedValue: selectedValue, idpGroupId: idpGroupId },
                success: function (response) {
                    console.log(response);
                    buildTable(response);
                    $("#exampleDataList").val("");
                },
                error: function () {

                }
            });
        });

        function buildTable(compties) {
            js('#myTable').DataTable().destroy();
            var tableHtml = "";

            for (var i = 0; i < compties.length; i++) {
                var compty = compties[i];

                var rowHtml = "<tr>" +
                    "<td>" +
                        "<div class='form-check'>" +
                            "<input class='form-check-input' type='checkbox' name='competencyIds' value='" + compty.CompetencyId +"' />" +
                        "</div>" +
                    "</td>" +
                    "<th scope='row'>" + compty.Type + "</th>" +
                    "<th scope='row'>" + compty.CompetencyId + "</th>" +
                    "<td style='font-size: 14px'>" + compty.CompetencyNameTH + "</td>" +
                    "<td style='font-size: 14px'>" + compty.CompetencyNameEN + "</td>" +
                    "<td><textarea style='height: 100px; font-size: 12px' class='form-control' readonly>" + compty.CompetencyDesc + "</textarea></td>" +
                    "<td><textarea style='height: 100px; font-size: 12px' class='form-control' readonly>" + compty.Pl1 + "</textarea></td>" +
                    "<td><textarea style='height: 100px; font-size: 12px' class='form-control' readonly>" + compty.Pl2 + "</textarea></td>" +
                    "<td><textarea style='height: 100px; font-size: 12px' class='form-control' readonly>" + compty.Pl3 + "</textarea></td>" +
                    "<td><textarea style='height: 100px; font-size: 12px' class='form-control' readonly>" + compty.Pl4 + "</textarea></td>" +
                    "<td><textarea style='height: 100px; font-size: 12px' class='form-control' readonly>" + compty.Pl5 + "</textarea></td>" +
                    "</tr>";

                tableHtml += rowHtml;
            }

            $("#tableContainer").html(tableHtml);

            js('#myTable').DataTable({
                info: false,
                order: [[1, 'asc']],
                paging: true,
                language: {
                    search: '',
                    searchPlaceholder: 'ค้นหา',
                    lengthMenu: '_MENU_',
                    paginate: {
                        next: 'ถัดไป <i class="fa fa-angle-right"></i>',
                        previous: '<i class="fa fa-angle-left"></i> ก่อนหน้า'
                    },
                    info: 'กำลังแสดง _START_ ถึง _END_ จาก _TOTAL_'
                },
                fixedHeader: {
                    header: true,
                    footer: true
                },
                columnDefs: [{
                    targets: 0,
                    orderable: false
                }],

                initComplete: function () {
                    js('#myTable_length label').addClass('entries-label');
                }
            });

            var checkAllCheckbox = document.getElementById('checkAll');

            var checkboxes = document.querySelectorAll('tbody input[name="competencyIds"]');

            checkAllCheckbox.addEventListener('change', function () {
                checkboxes.forEach(function (checkbox) {
                    checkbox.checked = checkAllCheckbox.checked;
                });
            });
        }
    });
</script>
