@model myApp.Models.IDPGroup
@{
    ViewBag.Title = "CreateCompetency";
}
<link rel="stylesheet" href="/CSS/Style.css">
<div id="createIDPGroupContent" class="container">
    @using (Html.BeginForm("CreateIDPGroup", "Home", FormMethod.Post))
    {
        <div class="py-2 text-center p-5 rounded header">
            <h1 class="mt-3"><strong>เพิ่ม IDP Group</strong></h1>
            <div class="alert alert-info alert-dismissible fade show text-center mt-3" role="alert">
                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                <strong>ข้อควรระวัง:</strong> รหัส IDP Group นั้นหากสร้างแล้วไม่อาจแก้ไขได้ โปรดตรวจสอบให้แน่ใจก่อนทำการ <strong>"บันทึก"</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" id="alertBox">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>@ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <script>
                    // Automatically close the alert after 5 seconds
                    window.setTimeout(function () {
                        $("#alertBox").fadeTo(300, 0).slideUp(300, function () {
                            $(this).remove();
                        });
                    }, 3000);
                </script>
            }
        </div>
        <hr />
        <div class="container">
            <div class="input-group input-group-lg mt-3 d-flex justify-content-center">
                <span class="input-group-text">
                    <i class="fa-solid fa-key fs-4" aria-hidden="true"></i>
                </span>
                <input type="text" class="form-control" placeholder="รหัส IDP Group" name="IDPGroupId" id="IDPGroupId">
            </div>
            <div class="input-group input-group-lg mt-3 d-flex justify-content-center">
                <span class="input-group-text">
                    <i class="fa-solid fa-tag fs-4" aria-hidden="true"></i>
                </span>
                <input type="text" class="form-control" placeholder="ชื่อ IDP Group" name="IDPGroupName" id="IDPGroupName">
            </div>

            <div class="input-group input-group-lg mt-3 d-flex justify-content-center">
                <span class="input-group-text">
                    <i class="fa-solid fa-calendar-days fs-4" aria-hidden="true"></i>
                </span>
                <select class="form-select" id="Year" name="Year">
                    @for (int year = DateTime.Now.Year + 541; year <= DateTime.Now.Year + 545; year++)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Year)
            </div>
            <hr />
            <div class="row justify-content-evenly text-center mt-5">
                <div class="col-4">
                    <a href="@Url.Action("IDPGroup")" class="btn btn-danger btn-lg"><i class="fa fa-ban" aria-hidden="true"></i> <strong>ยกเลิก</strong></a>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-floppy-o" aria-hidden="true"></i> <strong>บันทึก</strong></button>
                </div>
            </div>
        </div>
    }
</div>
    <style>
        .header {
            border: 5px dotted #b34045;
            background-color: #eeeeee;
        }

        .sticky-header-breadcrumb {
            position: sticky;
            border-radius: 0px;
            z-index: 10;
            top: 85px;
        }

