                        <th width="15%">หน่วยงาน</th>
                        <th width="30%">รายละเอียด</th>
                        <th width="10%">วันที่</th>
                        <th width="10%">จำนวนชั่วโมง</th>
                        <th width="15%">ไฟล์แนบ</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @*@for (int i = 0; i < Model.Count(); i++)
                    {
                        var good = Model.ElementAt(i);
                        <tr id="row-@(i+1)">
                            <td>@good.Type</td>
                            <td>@good.Company</td>
