<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--<link href="~/Content/font-awesome.min.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top " style="background-color: #C8E8FF ">
        <div class="container-fluid ms-2">
            <a href="@Url.Action("Index","Form")" class="navbar-brand"><img height="60" src="~/images/logo.png" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav  mb-2 mb-md-0 flex-grow-0">
                    @if (ViewBag.isAdmin == true)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Competency", "Competency", "Home", new { area = "" }, new { @class = "nav-link", style = "width: auto; font-weight:bold; color: #2D4686" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("IDP Group", "IDPGroup", "Home", new { area = "" }, new { @class = "nav-link", style = "width: auto; font-weight:bold; color: #2D4686" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("พนักงาน", "Employee", "Home", new { area = "" }, new { @class = "nav-link", style = "width: auto; font-weight:bold; color: #2D4686" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false" style="color: #2D4686"><strong>อัปโหลด</strong></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Competency", "UploadCompetency", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("IDP Group", "UploadIDPGroup", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("พนักงาน", "UploadEmployee", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false" style="color: #2D4686"><strong>บันทึกความดี</strong></a>
                            <ul class="dropdown-menu">
                                @for (int year = DateTime.Now.Year + 541; year <= DateTime.Now.Year + 545; year++)
                                {
                                    <li>
                                        @Html.ActionLink(" ปี" + (year.ToString()), "Goodness", "Home", new { year = (year.ToString()) }, new { @class = "dropdown-item" })
                                    </li>

                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("ดาวน์โหลด", "Download", "Home", new { area = "" }, new { @class = "nav-link", style = "width: auto; font-weight:bold; color: #2D4686" })
                        </li>

                    }
                    else if (ViewBag.isGood == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false" style="color: #2D4686"><strong>บันทึกความดี</strong></a>
                            <ul class="dropdown-menu">
                                @for (int year = DateTime.Now.Year + 541; year <= DateTime.Now.Year + 545; year++)
                                {
                                    <li>
                                        @Html.ActionLink(" ปี" + (year.ToString()), "Goodness", "Home", new { year = (year.ToString()) }, new { @class = "dropdown-item" })
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav ms-auto">
                    <li style="color: #2D4686" class="fw-bold"><span class="fa fa-user" style="font-size: large; color: #2D4686"></span> : @ViewBag.Username</li>
                </ul>
            </div>
        </div>
    </nav>




    <div style="margin-top: 85px;">
        @RenderBody()

        <footer class="container mt-2">
            <hr />
            <h6 class="dark-grey-text mb-3">
                © 2020 Copyright By Somboon Advance Technology |  <a href="http://web.sbg.com:84/IT/wp-content/uploads/2021/07/User-Manual-K2-Memo-Approval.pdf" target="_blank" style="text-decoration:none">คู่มือใช้งาน</a>
            </h6>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script src="https://kit.fontawesome.com/b88261c7eb.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
    $(document).ready(function () {
        $(".navbar-toggler").click(function () {
            $(".navbar-collapse").toggleClass("show");
        });
    });


</script>
